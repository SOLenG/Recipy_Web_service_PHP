<!-- Pagination -->
{% if pagination.count is not null and pagination.count > 1 %}
    <div class="row">
        <div class="col-md-12">
            <nav class="text-center">
                <ul class="pagination pagination-sm">
                    <li class="page-item {% if pagination.current <= 1 %}disabled{% endif %}">
                        {% set params_row = params|merge({'page':pagination.current -1}) %}
                        <a class="page-link" href="{% if pagination.current <= 1 %}#{% else %}{{ path(route_, params_row) }}{% endif %}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {% for index in 1..pagination.count %}
                        <li class="page-item{% if index == pagination.current %} active{% endif %}">
                            {% set params_row = params|merge({'page':index}) %}
                            <a class="page-link" href="{{ path(route_, params_row) }}">{{ index }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {% if pagination.current >= pagination.count %}disabled{% endif %}">
                        {% set params_row = params|merge({'page':pagination.current +1}) %}
                        <a class="page-link" href="{% if pagination.current >= pagination.count %}#{% else %}{{ path(route_, params_row) }}{% endif %}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
{% endif %}
